<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
  <meta charset="utf-8">
  <title>My Music Page</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css">
  <link rel="stylesheet" href="css/playlist.css">
</head>

<body>
  <div>
    <button id="backwards" type="button" name="button" onclick="history.back()"><i class="fa-solid fa-angle-left"></i></button>
  </div>

  <div class="title">
    <h1>My Music</h1>
  </div>
  <div class="row">
    <div class="col-lg-3">
      <div class="album-img">
        <img id="album-cover" src="taehwan.png" alt="">
      </div>

    </div>
    <div class="col-lg-3">
      <div class="music-player">

        <div class="music-title">
          music name
        </div>
        <div class="time-slider">
          <div class="current-time">00:00</div>
          <input type="range" min="1" max="100" value="0" class="t-slider" onchange="seekTo()">
          <div class="total-duration">00:00</div>
        </div>

        <div class="play-buttons">
          <div class="prev-music pl" onclick="prevMusic()">
            <i class="fa-solid fa-backward-step"></i>
          </div>
          <div class="playpause-music pl" onclick="playPauseMusic()">
            <i class="fa-solid fa-play"></i>
          </div>
          <div class="next-music pl" onclick="nextMusic()">
            <i class="fa-solid fa-forward-step"></i>
          </div>
        </div>

      </div>
    </div>
    <div class="col-lg-5">
      <div class="music-playlist">
        <%for(let i = 0; i < songs.length; i++){%>
        <button class="playlist" type="button" name="button" onclick="loadAndPlayMusic(<%=i%>)">
          <img class="list-image" src="images/<%=songs[i]%>.png" alt=""><%=songs[i]%>
        </button>
        <%}%>
      </div>
    </div>
  </div>


  <script src="js/player.js" charset="utf-8"></script>
</body>

</html>
